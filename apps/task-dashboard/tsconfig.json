{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@reducers/*": ["./src/reducers/*"],
      "core/*": ["../core/exports/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./**/*"]
}
