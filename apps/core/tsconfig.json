{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@reducers/*": [
        "./src/reducers/*"
      ],
      "@locales/*": [
        "./src/locales/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@utilities/*": [
        "src/utilities/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@files/*": [
        "./public/files/*"
      ],
      "timer/*": [
        "../timer/exports/*"
      ],
      "dashboard/*": [
        "../task-dashboard/exports/*"
      ]
    },
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "esnext"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./**/*"
  ]
}
