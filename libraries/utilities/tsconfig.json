{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./**/*"]
}
