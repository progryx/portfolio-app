{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@modules/*": ["./src/reducers/*"],
      "@assets/*": ["./assets/*"],
      "auth/*": ["../auth/exposes/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./**/*", "../../libs/icons-lib/icons", "../../libs/icons-lib/index.ts"]
}
